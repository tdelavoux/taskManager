
{% extends "base.html.twig" %}

{% block title %}{{ parent() }} - Inscription{% endblock %}


{% block body %}
	<h1>Inscription sur le site ! </h1>
	{{ form_start(form) }}
	{{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr' : {'placeholder' : 'Nom d\'utilisateur'}}) }}
	{{ form_row(form.email, {'label': 'Adresse email', 'attr' : {'placeholder' : 'pierre.dupont@email.com'}}) }}
	{{ form_row(form.passwd, {'label': 'Mot de passe', 'attr' : {'placeholder' : '*******'}}) }}
	<button type="submit" class="btn btn-success"> S'inscrire ! </button>
	{{ form_end(form) }}
{% endblock %}
