
{% extends "base.html.twig" %}

{% block title %}{{ parent() }} - Login{% endblock %}


{% block body %}
<nav class="navbar navbar-expand navbar-dark bg-dark static-top">

<a class="navbar-brand mr-1" href="dashboard">Task Manager </a>

<!-- Navbar -->
<ul class="navbar-nav ml-auto ml-md-0">
  <a href="inscription" class="btn btn-secondary pull-right">Sign-up</a>
</ul>
</nav>

<div id="contentPage">
	<div id="centered-bloc" class="col-md-4">
		<h1>Connectez-vous à votre compte</h1>

		<form action="{{ path('security_login') }}" method="post">
			<div class="form-group">
				<label for="emailAdress">Email</label>
				<input id="emailAdress" placeholder="exemple@compagny.com" required name="_username" type="text" class="form-control">
			</div>
			<div class="form-group">
				<label for="passwd">Mot de passe</label>
				<input id="passwd" placeholder="Mot de passe" required name="_password" type="password" class="form-control">
			</div>
			<div class="form-btn">
				<button type="submit" class="btn btn-primary">Se Connecter <i class="fas fa-arrow-right"></i></button>
			</div>
		</form>
		<p>Pas encore de compte ? <a href="inscription">Inscrivez-vous</a></p>
		<p>Mot de passe oublié ? <a href="#">renouvelez le ici</a></p>
		
	</div>
</div>
{% endblock %}
