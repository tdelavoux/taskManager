
{% extends "base.html.twig" %}

{% block title %}{{ parent() }} - Login{% endblock %}


{% block body %}
	<h1>Connectez-vous ! </h1>

	<form action="{{ path('security_login') }}" method="post">
		<div class="form-group">
			<input placeholder="email de connexion" required name="_username" type="text" class="form-control">
		</div>
		<div class="form-group">
			<input placeholder="Mot de passe" required name="_password" type="password" class="form-control">
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-success">Se Connecter</button>
		</div>
	</form>
{% endblock %}
